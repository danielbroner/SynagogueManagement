<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Display the prayer message -->
        <TextView
            android:id="@+id/prayerMessageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prayer message will appear here"
            android:textSize="16sp"/>

        <!-- Button to allow superadmin to write a message -->
        <Button
            android:id="@+id/editPrayerMessageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Message"
            android:visibility="gone" /> <!-- Hidden by default, only visible for superadmin -->

    </LinearLayout>

</androidx.cardview.widget.CardView>
